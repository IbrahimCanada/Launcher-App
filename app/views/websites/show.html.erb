<h1>This is the website: getyourlaunchbox.heroku.com/<%= "#{@website.url}" %></h1>
<% if current_admin == @website.admin %>
	<p>Welcome, <%= "#{@website.admin.email}" %>! This is your landing page, and you can edit it to your liking!</p>
	<%= link_to "Edit", edit_website_path(@website) %>
<% end %>
<% if false %>	
	<h3>Logo</h3>
<% end %>
<h3><%= "#{@website.header}" %></h3>
<p><%= "#{@website.content}" %></p>
<br />
<p>Launching soon. Enter your email to join our invite list:</p>
<%= form_for @user do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.hidden_field :website, :value => @website.id %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>
<% if @user_show %>
	<p>Your unique user link is <%= "#{@user.link}" %></p>
<% end %>
